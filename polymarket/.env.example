# Polymarket Market Making Bot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: API Credentials
# =============================================================================

# Your Polygon wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Address that holds your USDC funds on Polymarket
FUNDER_ADDRESS=0xYourWalletAddress

# Signature type:
# 0 = EOA (MetaMask, hardware wallet, direct private key)
# 1 = Email/Magic wallet
# 2 = Browser proxy wallet
SIGNATURE_TYPE=0

# =============================================================================
# TRADING PARAMETERS (Optional - defaults shown)
# =============================================================================

# Maximum total USDC position across all markets
MAX_POSITION_USDC=100

# Maximum USDC position per market
MAX_POSITION_PER_MARKET=50

# =============================================================================
# BOT SETTINGS (Optional - defaults shown)
# =============================================================================

# Enable paper trading (no real orders placed)
PAPER_TRADING_MODE=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# State persistence file
STATE_FILE=state.json
